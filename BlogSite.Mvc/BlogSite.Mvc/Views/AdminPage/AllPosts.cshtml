@model List<MainDto>


@{
    Layout = null;
}

<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Posts</h2>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="table-wrap">
						<table class="table table-bordered table-dark table-hover">
						  <thead>
						    <tr>
						      <th>#</th>
						      <th>Title</th>
						      <th>Link</th>
						      <th>CreatedAt</th>
						      
						    </tr>
						  </thead>
						  <tbody>
								@if (Model != null && Model.Any() && !string.IsNullOrEmpty(Model[0].Title))
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@item.Id</th>
                                            <td>@item.Title</td>
                                            <td><a href="https://localhost:7264/@item.Slug" target="_blank" style="text-decoration: none;  color: #1AAB8A;">@item.Slug</a></td>
                                            <td>@item.CreatedAt</td>
                                            <td><a href="https://localhost:7264/adminpage/updatepost/@item.Id" style="text-decoration: none;"><button type="button" class="btn btn-outline-secondary">DÃ¼zenle</button></a></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <th scope="row">Null</th>
                                        <td>Null</td>
                                        <td><a href="#">NULL</a></td>
                                        <td>Null</td>
                                    </tr>
                                }

						  </tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</section>