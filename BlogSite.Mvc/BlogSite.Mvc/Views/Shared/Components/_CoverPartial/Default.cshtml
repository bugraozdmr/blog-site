@model ListAndOnePostDto

@{
    Layout = null;
}

<header class="masthead" style="background-image: url('@Model?.Data.ImageMain')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="post-heading">
                    <h1>@Model?.Data.Title</h1>
                    <h2 class="subheading">@Model?.Data.secondaryTitle</h2>
                    <span class="meta">
                        <a href="#!">@Model?.Data.Author</a>
                        tarafından @Model?.Data.CreatedAt 'da yüklendi
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>